---
import NavItem from '../components/NavItem.astro';
import NavMenu from '../components/NavMenu.astro';

export interface Props {
    title: string,
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
</head>
<body>
    <header>
        <div class="header-inner">
            <a href="/" class="header-logo">
                <img src="/logo.png" alt="Logo">
            </a>
            <nav>
                <NavItem name="Schule">
                    <NavMenu name="Kontakt" href="/kontakt"></NavMenu>
                    <NavMenu name="Kurzprofil" href="/kurzprofil"></NavMenu>
                    <NavMenu name="Unser Konzept" href="/konzept" showChildren={true}>
                        <NavMenu name="Schulleiter Rußbült: Unsere Werte, Ziele und Lernwege" href="/error"></NavMenu>
                        <NavMenu name="Schulentwicklung" href="/error"/>
                        <NavMenu name="Lernen im Ganztag" href="/error"/>
                        <NavMenu name="Fördern und Fordern" href="/error"/>
                        <NavMenu name="Inklusion" href="/error"/>
                        <NavMenu name="Soziales Lernen" href="/error"/>
                        <NavMenu name="Berufs- und Studienorientierung" href="/error"/>
                    </NavMenu>
                    <NavMenu name="Schullaufbahn" href="/laufbahn" showChildren={true}>
                        <NavMenu name="5./6. Klasse" href="/error"/>
                        <NavMenu name="Mittelstufe" href="/error"/>
                        <NavMenu name="Oberstufe" href="/error"/>
                        <NavMenu name="SLK" href="/error"/>
                    </NavMenu>
                    <NavMenu name="Galerie" href="/galerie"></NavMenu>
                    <NavMenu name="Stundenzeiten" href="/stundenzeiten"></NavMenu>
                </NavItem>
                <NavItem name="Wir am HCG">
                    <NavMenu name="Schulleitung" href="/error"></NavMenu>
                    <NavMenu name="Kollegium" href="/error"></NavMenu>
                    <NavMenu name="Schüler" href="/error" showChildren={true}>
                        <NavMenu name="Schülervertretung" href="/error"></NavMenu>
                        <NavMenu name="Schüler werden aktiv" href="/error"></NavMenu>
                    </NavMenu>
                    <NavMenu name="Sozialpädagogischer Bereich" href="/error"></NavMenu>
                    <NavMenu name="Berufs- und Studienorientierung" href="/error"></NavMenu>
                    <NavMenu name="Eltern" href="/error"></NavMenu>
                    <NavMenu name="Förderverein und Partner" href="/error"></NavMenu>
                </NavItem>
                <NavItem name="Schulleben">
                    <NavMenu name="Termine" href="/error"></NavMenu>
                    <NavMenu name="AGs" href="/error"></NavMenu>
                    <NavMenu name="Mensa" href="/error"></NavMenu>
                    <NavMenu name="Bibliothek" href="/error" showChildren={true}>
                        <NavMenu name="Angebote" href="/error"></NavMenu>
                        <NavMenu name="Suche" href="/error"></NavMenu>
                        <NavMenu name="Nutzungsregeln" href="/error"></NavMenu>
                        <NavMenu name="als Lernort" href="/error"></NavMenu>
                        <NavMenu name="Team" href="/error"></NavMenu>
                        <NavMenu name="Empfehlungen" href="/error"></NavMenu>
                        <NavMenu name="Die Aktionen des Bibliotheksteams" href="/error"></NavMenu>
                    </NavMenu>
                    <NavMenu name="Tag der offenen Tür 2021-22" href="/error"></NavMenu>
                    <NavMenu name="Abiturfeier 2022" href="/error"></NavMenu>
                    <NavMenu name="Unsere Regeln" href="/error"></NavMenu>
                </NavItem>
                <NavItem name="Fächer">
                    <NavMenu name="24 Fächer" href="/error"></NavMenu>
                    <NavMenu name="18 Wahlpflichtfächer" href="/error"></NavMenu>
                </NavItem>
            </nav>
        </div>
    </header>
    <div class="body">
        <slot/>
    </div>
    <footer>
        <section class="footer-links">
            <a href="/contact">Kontakt</a>
            <a href="/impressum">Impressum</a>
            <a href="/search">Suche</a>
        </section>
        <section class="footer-copyright">&copy; [] {new Date().getFullYear()}</section>
    </footer>
</body>
</html>

<style>
    header {
        /* background-color: var(--color-blue); */
        display: flex;
        justify-content: center;
        /* padding-bottom: 1rem; */
        background-color: var(--bg-main);
    }

    .body {
        min-height: 100vh;
    }

    .header-inner {
        width: 80vw;
        display: grid;
        grid-template-columns: auto 1fr;
    }

    nav {
        text-align: right;
        position: relative;
        display: flex;
        justify-content: flex-end;
        /* display: grid;
        grid-template-columns: repeat(auto-fit, minmax(1rem, 1fr)); */
    }

    .footer-links {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(1rem, 1fr));
        justify-items: center;
        padding: var(--padding-large) 0;
    }

    .footer-copyright {
        text-align: center;
        padding: var(--padding-normal) 0;
    }

    footer section {
        background-color: var(--bg-sec);
        border-top: 0.1rem solid var(--fg-sec);
    }
</style>

<style is:global>
    :root {
        --bg-main:      #ffffff;
        --fg-main:      #545d69;

        --bg-sec:       #f8f8f8;
        --fg-sec:       #69676c;

        --color-red:    #d6577b;
        --color-green:  #7bd88f;
        --color-yellow: #fce566;
        --color-orange: #fd9353;
        --color-purple: #948ae3;
        --color-blue:   #5ad4e6;

        --padding-normal: 1rem;
        --padding-small: 0.5rem;
        --padding-large: 2rem;

        --font-subtitle: 1.25rem;
        --font-title: 1.5rem;
        --font-title-l: 2rem;
        --font-title-xl: 2.5rem;
    }

    html {
        font-family: Arial, Helvetica, sans-serif;

        background-color: var(--bg-main);
        color: var(--fg-main);
    }

    body {
        margin: 0;
    }

    a {
        color: inherit;
        text-decoration: none;
        transition: 0.125s ease-out filter;
    }

    a:hover {
        filter: brightness(1.1);
    }
</style>